<h1>Lists</h1>
<div class="container">
  <div class="cards">
   <% @lists.each do |list| %>
      <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
      <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <% end %>
         <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
    </div>
    <a class="btn btn-gradient" href="#">New list</a>
    <button type="button" class="btn btn-gradient"><%= link_to "New list", new_list_path %></button>


</div>

