<h1>Lists</h1>
<div class="container">
  <div class="cards">
   <% @lists.each do |list| %>
      <% if list.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
      <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2850&q=80)">
      <% end %>
         <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
    </div>
    <button type="button" class="btn btn-gradient"><%= link_to "New list", new_list_path %></button>


</div>

